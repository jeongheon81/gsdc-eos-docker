#!/usr/bin/env bash

# Start kdc
if [ ! -e /var/run/kdc.pid ] || ! ps $(cat /var/run/kdc.pid) | grep kdc &>/dev/null ; then
  echo -n "Starting kdc... "
  /usr/libexec/kdc --detach
  echo Done.
fi

#Init the kdc store
if ! /usr/lib/heimdal/bin/kadmin -l -r {{ eos_realm }} check &>/dev/null ; then
  echo -n "Initing kdc... "
  /usr/lib/heimdal/bin/kadmin -l -r {{ eos_realm }} init --realm-max-ticket-life=unlimited --realm-max-renewable-life=unlimited {{ eos_realm }} || (echo Failed. ; exit 1)
  echo Done.
fi

# Populate KDC and generate keytab files
echo -n "Populating kdc... "
if ! /usr/lib/heimdal/bin/kadmin -l -r {{ eos_realm }} list {{ eos_admin_user }}* | /usr/bin/grep {{ eos_admin_user }} &>/dev/null ; then
  /usr/lib/heimdal/bin/kadmin -l -r {{ eos_realm }} add --random-password --use-defaults {{ eos_admin_user }} | /usr/bin/tee -a /root/{{ eos_admin_user }}.log
  /usr/lib/heimdal/bin/kadmin -l -r {{ eos_realm }} ext_keytab --keytab=/root/{{ eos_admin_user }}.keytab {{ eos_admin_user }}
fi
if [ ! -e /root/{{ eos_admin_user }}.keytab ] ; then
  /usr/lib/heimdal/bin/kadmin -l -r {{ eos_realm }} ext_keytab --keytab=/root/{{ eos_admin_user }}.keytab {{ eos_admin_user }}
fi
{% for eos_mgm_master in eos_mgm_masters %}
if ! /usr/lib/heimdal/bin/kadmin -l -r {{ eos_realm }} list host/{{ eos_mgm_master }}* | /usr/bin/grep host/{{ eos_mgm_master }} &>/dev/null ; then
  /usr/lib/heimdal/bin/kadmin -l -r {{ eos_realm }} add --random-password --use-defaults host/{{ eos_mgm_master }} | /usr/bin/tee -a /root/{{ eos_mgm_master }}.log
  /usr/lib/heimdal/bin/kadmin -l -r {{ eos_realm }} ext_keytab --keytab=/root/{{ eos_mgm_master }}.keytab host/{{ eos_mgm_master }}
fi
if [ ! -e /root/eos.keytab ] ; then
  /usr/lib/heimdal/bin/kadmin -l -r {{ eos_realm }} ext_keytab --keytab=/root/{{ eos_mgm_master }}.keytab host/{{ eos_mgm_master }}
fi
{% endfor -%}
echo Done.
